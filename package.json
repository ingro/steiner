    "test": "cd packages/steiner && npm test"
  },
  "devDependencies": {
    "lerna": "2.0.0-beta.30",
    "lerna-npm-readme-hack": "^1.0.6",
    "react": "^15.3.2",
    "react-redux": "^5.0.0-beta.3",
    "react-router": "^4.0.0-alpha.5",
    "react-router-addons-controlled": "0.0.1",
    "redux": "^3.6.0",
    "redux-form": "^6.2.0",
    "rimraf": "^2.5.4"
  }
}
